                <li class="nav-item"><a
                        href="/{{meta.locale}}/index.html?city={{address.city}}&Country={{address.countryCode}}"
                        class="">{{formatOption address.city}}</a></li>
                <li class="nav-item">{{formatOption name}}</li>
            </ul>
        </div>
    </div>

    <div class="page-title">
        <div class="container">
            <h1>{{formatOption name}}</h1>
        </div>
    </div>

