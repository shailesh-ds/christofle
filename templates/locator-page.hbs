    <p>{{c_datashow.descriptions}}</p>
    <p>{{c_datashow.mainphonenumber}}</p>


    {{>footer}}

    <script>
        window.onload = function () {
            setInterval(function () {
                $("select").on('change', function () {
                    var optionIndex = $(this).find('option:selected').index();
                    $(this).parent().addClass('hasActive', optionIndex == 0);
                });

                $(".result .storelocation-name").on("click", function () {
                    var findChild = $(this).closest('.center-column').html();
                    var getHeight = $(this).closest('.center-column').outerHeight();

                    $('.location').removeClass('active');
                    $(this).closest('.location').addClass('active');
                    $('#full-details').empty();
                    $('#full-details').append(findChild).prepend('<a href="javascript:void(0);" class="back"><span class="icon font-chrisfo-icon">i</span></a><span class="space"></span>');
                    $('#full-details').addClass('active-detail');
                    $('#full-details .space').css('height', getHeight);

                    $('#full-details *').removeAttr('id');
                    
                });

                $(".back").on("click", function () {
                    $('#full-details').empty();
                    $('.location').removeClass('active');
                    $('#full-details').removeClass('active-detail');
                });
            }, 1000);
        };
    </script>


</body>

